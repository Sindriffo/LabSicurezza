
<%= form_for(modificas_path()) do |f| %>

<div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "nome" %>
  </div>

<div class="field">
    <%= f.label :cognome %><br />
    <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome" %>
  </div>

<div class="field">
	<%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>


<br>
  <div class="actions">
    <%= f.submit "Modifica" %>
  </div>

<% end %>
