%h1 form registrazione

= form_tag callback_path(), :method => :get do

	= label :user, :nome, 'Nome'
	= text_field :user, :nome

	= label :user, :cognome, 'Cognome'
	= text_field :user, :nome
	
	= label :user, :email, 'Email'
	= text_field :user, :email

	= label :user, :password, 'Password'
	= password_field :user, :password

	= label :user, :telefono, 'Numero di telefono'
	= text_field :user, :telefono
    
	= submit_tag 'Crea Account' 

%tr
%td= link_to ("Ho gia' un account"), login_path()
